<div class="author">
    <h1 class="author__heading">Hi, I am Kevin.</h1>
    <p class="author__body">Web Developer, Content Creator and C++ Programmer</p>
</div>

<img src="/img/MafiaPage.jpg" alt="Mafia Definitive Edition" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="articles-ul">
        <% data.forEach(post => { %>


            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
            <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
</section>